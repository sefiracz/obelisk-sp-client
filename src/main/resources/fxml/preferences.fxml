<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minWidth="400" prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lu.nowina.nexu.view.ui.PreferencesController">

	<top>
    <Label styleClass="message" text="%preferences.header" wrapText="true"/>
	</top>

  <center>
    <GridPane fx:id="gridPane" alignment="CENTER" styleClass="preferences-container" vgap="5" hgap="10">
      <Label id="startUpLabel" text="%preferences.onstartup" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <CheckBox id="startUp" fx:id="onStartup" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Label text="%preferences.language" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <ComboBox fx:id="language" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
  </center>

	<bottom>
    <HBox styleClass="btn-container" BorderPane.alignment="CENTER">
      <Button fx:id="reset" mnemonicParsing="false" styleClass="btn-danger" text="%button.reset"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button fx:id="cancel" mnemonicParsing="false" styleClass="btn-default" text="%button.cancel"/>
      <Button fx:id="ok" mnemonicParsing="false" styleClass="btn-primary" text="%button.ok"/>
    </HBox>
	</bottom>

</BorderPane>
